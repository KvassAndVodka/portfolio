generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  summary     String
  content     String   @db.Text
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  type     PostType
  category String?

  isPinned   Boolean @default(false)
  pinnedOrder Int?   // For manual ordering of pinned items
  showAsBlog Boolean @default(false)

  techStack  String[]
  githubUrl  String?
  demoUrl    String?
  projectUrl String?
  thumbnail  String?
}

enum PostType {
  BLOG
  PROJECT
}

model Media {
  id        String   @id @default(cuid())
  filename  String
  mimeType  String
  data      Bytes
  createdAt DateTime @default(now())
}

model Visit {
  id        String   @id @default(cuid())
  path      String
  ipHash    String?  // Anonymized IP for unique visitor counting
  userAgent String?
  referer   String?
  country   String?
  city      String?
  createdAt DateTime @default(now())

  @@index([path])
  @@index([createdAt])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String   // Hashed password
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}